<!--一つ前のページに戻る-->
<h1 style="padding-top: 70px;"><%= link_to '⇚', 'javascript:history.back()' %></h1>

<div class="container" style="display: flex; justify-content: center; align-items: center;">
  <% if user_signed_in? %>
    <div class="col-12 search_form ml-5">　<!--検索フォーム-->
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word, style: "width:70%" %>
        <%= f.select :range, options_for_select([['User'], ['Post']]) %>　<!--検索タグ選択-->
        <%= f.submit "検索", class: "btn btn-primary btn-sm mb-1" %>
      <% end %>
    </div>
  <% end %>
</div>

<!--検索対象モデルがUserの時 -->
<% if @range == "User" %>
  <div class="container text-light mt-4" style="display: flex; justify-content: center; align-items: center;">
    <h2>Results index</h2>
  </div>

  <%= render 'public/users/user_index_list', users: @users %>
<!--検索対象モデルがPostの時 -->
<% elsif @range == "Post"%>
  <div class="container text-light mt-4" style="display: flex; justify-content: center; align-items: center;">
    <h2>Results index</h2>
  </div>

  <%= render 'public/posts/post_index_list', posts: @posts %>
<% else %>

<% end %>
