<h1><%= link_to "⇚", admin_root_path %></h1>

<div class="container pt-5">
  <div class="row">
    <div class="col-md-5 mb-3">
      <h3 class="px-4 text-center"><%= @user.user_name %>さんの詳細</h3>
    </div>
  </div>
    <div class="pl-5">
      <p class="my-3"><strong>会員ID </strong><span style="margin-left:150px;"><%= @user.id %></span></p>
      <p class="my-3"><strong>ユーザー名 </strong><span style="margin-left:160px;"><%= @user.user_name %></span></p>
      <p class="my-3"><strong>プロフィール </strong><span style="margin-left:125px;"><%= @user.profile %></span></p>
      <p class="my-3"><strong>メールアドレス </strong><span style="margin-left:80px;"><%= @user.email %></span></p>
      <p class="my-3"><strong>会員ステータス </strong><span style="margin-left:90px; color:<%= @user.is_active ? 'green' : 'gray' %>;"><%= @user.is_active ? '有効' : '退会済み' %></span></p>

     <%= link_to '編集する', edit_admin_user_path(@user), class: 'btn btn-success btn-space' %>
     <!--%= link_to 'POST一覧', admin_posts_path(@user.id), class: 'btn btn-info' %-->
    </div>
  </div>
</div>

<br>
<div class="container pt-5">
  <div class="row">
    <div class="col-md-5 mb-3">
      <h3 class="px-4 text-center"><%= @user.user_name %>さんのPOST一覧です！</h3>
    </div>
  </div>
  <div class="pl-5">
    <% @posts.each do |posts| %>
      <%= posts.post_text %><br>
      <% if posts.image.attached? %>
        <%= image_tag posts.image, size: "400x300" %><br>
      <%else%>

      <%end%>
      <%= link_to "削除", admin_user_path(posts.id), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %>
      <br>
    <% end %>
  </div>
</div>