<div class="container pt-5">
  <div class="row">
    <div class="col-md-3 mb-3">
      <h2 class="mb-4 text-center">新規会員登録</h2>
    </div>
  </div>
  <%= render "public/shared/error_messages", resource: resource %>

  <%= form_with(model: resource, url: user_registration_path) do |f| %>
    <div class="form-group row">
      <%= f.label :user_name, "ユーザーネーム", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %>文字以上）</em>
        <% end %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row text-center">
      <div class="col-sm-7 offset-sm-2">
        <%= f.submit "新規登録", class: "btn btn-info" %>
      </div>
    </div>
  <% end %>

  <div class="form-group row text-center">
    <div class="col-sm-7 offset-sm-2">
      <p>既に登録済の方</p>
      <p><a href="<%= new_user_session_path %>">こちら</a>からログインして下さい</p>
    </div>
  </div>
</div>
<br>
