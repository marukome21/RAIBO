<h1><%= link_to "⇚", posts_path %> 　　筋肉の夢に戻る</h1>
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="card-title">
        <div class="row">
          <div class="col-10">
            <%= image_tag @post.user.get_user_image(100,100), class: "mt-3 rounded-circle"; %>
            <span><strong><%= @post.user.user_name %></strong></span>
          </div>
          <div class="text-right pt-4">
            <% if @post.user == current_user %>
              <%= link_to "削除", post_path(@post.id), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %>
            <%end%>
          </div>
        </div>
        <div class="row py-5">
          <div class="card-text pl-3">
            <h4><%= @post.post_text %></h4>
          </div>
        </div>
        <div class="row">
          <% if @post.image.attached? %>
            <%= image_tag @post.image, class: "card-img-top"; %>
          <%else%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
