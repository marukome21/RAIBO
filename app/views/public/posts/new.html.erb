<h1 style="padding-top: 70px;"><%= link_to "⇚", posts_path %></h1>

<div class="container">
  <div class="row">
    <div class="col- mb-3">
      <h2 class="mb-4 text-center text-light">新規投稿</h2>
    </div>
  </div>
  <!--新規投稿機能-->
  <div class="row-sm-7">
    <%= form_with model: @post, local: true do |form| %>
      <div class="form-group row">
        <%= form.text_area :post_text, placeholder: "今日はどんなことがありました？", class: "form-control form-control-lg" %> <!--bodyの入力フォーム生成-->
      </div>
      <div class="form-group row text-light">
        <%= form.label :image do %>
          <h1>image<i class="fa-solid fa-image text-primary ml-1" style="cursor: pointer"></i></h1>
        <% end %>
        <%= form.file_field :image, accept: "image/*", class: "form-control" %>
      </div>
      <div class="form-group row text-center pt-5">
        <div class="col-sm-7 offset-sm-2">
            <%= form.submit "Post", class: "btn btn-primary d-grid gap-2 col-5" %>
        </div>
      </div>
    <% end %>
  </div>
</div>