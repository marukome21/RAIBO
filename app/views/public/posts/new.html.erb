<h1 style="padding-top: 70px;"><%= link_to "⇚", posts_path %></h1>

<div class="container">
  <div class="row">
    <div class="col- mb-3">
      <h2 class="mb-4 text-center text-light">新規投稿</h2>
    </div>
  </div>
  <div class="row-sm-7">
    <%= form_with model: @post, local: true do |form| %>
      <div class="form-group row">
        <%= form.text_area :post_text, placeholder: "今日はどんなことがありました？", class: "form-control form-control-lg" %> <!--bodyの入力フォーム生成-->
      </div>
      <div class="form-group row text-light">
        <%= form.label :image %>
        <%= form.file_field :image, accept: "image/*", class: "form-control" %>
      </div>
      <div class="form-group row text-center">
        <div class="col-sm-7 offset-sm-2">
          <%= form.submit %> <!--送信ボタンを生成-->
        </div>
      </div>
    <% end %>
  </div>
</div>