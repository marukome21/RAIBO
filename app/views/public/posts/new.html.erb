<h1>ここは新規投稿です！</h1>


<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %>が発生しました:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @post, local: true do |form| %>
  <%= form.label :post_text %><br>
  <%= form.text_area :post_text %> <!--bodyの入力フォーム生成-->
  <<%= form.label :image %><br>
  <%= form.file_field :image, accept: "image/*" %>  <!--画像アップロード機能-->
  <%= form.submit %> <!--送信ボタンを生成-->
<% end %>
