<h1 style="padding-top: 70px;"><%= link_to '⇚', 'javascript:history.back()' %></h1>

<%= render 'layouts/error_messages', xxxx: @user %>

<h3 class="col-md-5 my-5 text-center text-light">プロフィール編集</h3>
  <%= form_with model: @user, url: update_users_information_path, method: :patch do |f| %>
  <table class="table table-borderless text-light">
    <tr>
      <td>ユーザー名</td>
      <td><%= f.text_field :user_name, placeholder: "ユーザー名を空欄にしないでください", class: "form-control" %></td>
    </tr>
    <tr>
      <td>プロフィール</td>
      <td><%= f.text_area :profile, class: "form-control form-control-lg" %></td>
    </tr>
    <tr>
      <td>ユーザー画像</td>
      <td><%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email, placeholder: "メールアドレスは空けないでください", class: "form-control" %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= f.submit "プロフィール変更を保存", class:"btn btn-success" %>
        <%= link_to "退会する", users_unsubscribe_path, class:"btn btn-danger ml-3" %>
      </td>
    </tr>
  </table>
  <% end %>